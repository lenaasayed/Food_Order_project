<!-- Services-->
<section class="page-section" id="providerlist">
  <div class="container px-4 px-lg-5">
    <h2 class="text-center mt-0">At Your Service</h2>
    <hr class="divider my-4" />

    <a href="/provider/add-page/" class="btn btn-primary my-4">
      Add New Provider
    </a>
    <div class="table-responsive">
      <table class="table table-hover table-bordered">
        <thead class="thead-light">
          <tr>
            <th scope="col">Id</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Email</th>
            <th scope="col">Position</th>
            <th scope="col">Company</th>
            <th scope="col">Action</th>
          </tr>

        </thead>
        <tbody>
          {{#each provider}}
            <tr>
              <td scope="row">{{id}}</td>
              <td scope="row">{{first_name}}</td>
              <td scope="row">{{last_name}}</td>
              <td scope="row">{{email}}</td>
              <td scope="row">{{position}}</td>
              <td scope="row">{{company.company_name}}</td>
              <td scope="row">
                <a href="/provider/details/{{id}}" class="btn btn-info btn-sm">
                  More Info
                </a>
                <a
                  href="/provider/edit/{{id}} "
                  class="btn btn-secondary btn-sm"
                >
                  Edit
                </a>

                <a
                  href="/provider/delete/{{id}}"
                  class="btn btn-danger btn-sm"
                  onclick="return confirm('Are you sure you want to delete this item?');"
                >Delete</a>
              </td>
            </tr>

          {{/each}}
        </tbody>

      </table>

    </div>

  </div>

</section>